{
  "name": "expo-playground",
  "version": "1.0.0",
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "ios:release": "expo run:ios --configuration Release",
    "web": "expo start --web",
    "lint": "eslint .",
    "test": "env TZ='Australia/Brisbane' jest --verbose --coverage",
    "maestro:install": "curl -Ls \"https://get.maestro.mobile.dev\" | bash",
    "maestro:test:all": "maestro test .maestro",
    "maestro:test:smokeTest": "maestro test --include-tags smokeTest .maestro",
    "maestro:cloud:all": "maestro cloud ./ios/build/Products/Release-iphonesimulator/expoplayground.app .maestro"
  },
  "dependencies": {
    "@gorhom/bottom-sheet": "^4",
    "@react-navigation/elements": "^1.3.21",
    "@react-navigation/native": "^6.1.9",
    "@react-navigation/native-stack": "^6.9.17",
    "@react-navigation/stack": "^6.3.20",
    "ansi-colors": "^4.1.3",
    "expo": "^50.0.0-preview.9",
    "expo-application": "~5.8.2",
    "expo-constants": "~15.4.3",
    "expo-linking": "~6.2.1",
    "expo-localization": "~14.8.2",
    "expo-splash-screen": "~0.26.2",
    "expo-status-bar": "~1.11.1",
    "expo-system-ui": "~2.9.3",
    "expo-updates": "~0.24.7",
    "jest": "^29.7.0",
    "jest-expo": "~50.0.1",
    "jest-junit": "^16.0.0",
    "lodash": "^4.17.21",
    "react": "18.2.0",
    "react-intl": "^6.5.5",
    "react-native": "0.73.2",
    "react-native-gesture-handler": "~2.14.0",
    "react-native-reanimated": "~3.6.0",
    "react-native-safe-area-context": "4.8.2",
    "react-native-screens": "~3.29.0",
    "react-native-snackbar": "^2.6.2",
    "react-native-unistyles": "^2.0.0-rc.1"
  },
  "devDependencies": {
    "@babel/core": "^7.23.6",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^12.4.1",
    "@types/jest": "^29.5.11",
    "@types/lodash": "^4.14.202",
    "@types/react": "~18.2.45",
    "@types/react-native": "^0.72.8",
    "babel-plugin-module-resolver": "^5.0.0",
    "eslint": "^8.55.0",
    "eslint-config-universe": "^12.0.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "private": true
}
